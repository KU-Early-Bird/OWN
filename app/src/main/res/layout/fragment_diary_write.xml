<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/DiaryWriteContainer"
    android:background="@color/customLightBlue">

    <RelativeLayout
        android:id="@+id/newDiary"
        android:layout_width="match_parent"
        android:layout_height="455dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageinput"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:background="@color/black" />

        <EditText
            android:id="@+id/editContent"
            android:layout_width="300dp"
            android:layout_height="140dp"
            android:layout_below="@id/imageinput"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/customDarkBlue"
            android:foregroundTint="@color/customDarkBlue"
            android:hint="오늘의 일기를 적어주세요"
            android:inputType="textMultiLine"
            android:lines="3"
            android:maxLines="3"
            android:minLines="3"
            android:textColorHint="@color/customDarkBlue" />

        <Button
            android:id="@+id/button"
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:layout_below="@id/editContent"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="56dp"
            android:layout_marginBottom="26dp"
            android:text="작성하기"
            android:backgroundTint="@color/customYellow"
            android:shadowColor="@color/black"
            android:textStyle="bold"
            android:textColor="@color/customDarkEmerald"
            app:strokeColor="@color/customDarkEmerald"
            app:strokeWidth="2dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>