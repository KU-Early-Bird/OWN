<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    android:orientation="vertical"
    tools:context=".Workout.WorkoutFragment">

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="330dp"
        android:layout_height="250dp"
        android:layout_marginEnd="235dp"
        android:layout_marginBottom="4dp"
        android:alpha="0.88"
        android:rotation="0"
        android:rotationY="-125"
        android:src="@mipmap/pattern2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="208dp"
        android:layout_height="199dp"
        android:layout_marginEnd="340dp"
        android:layout_marginBottom="616dp"
        android:alpha="0.88"
        android:rotationX="0"
        android:rotationY="0"
        android:src="@mipmap/pattern2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="95dp"
        android:layout_height="77dp"
        android:layout_marginEnd="260dp"
        android:layout_marginBottom="353dp"
        android:alpha="0.88"
        android:rotation="90"
        android:rotationX="-200"
        android:rotationY="0"
        android:src="@mipmap/pattern2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="70dp"
        android:layout_height="75dp"
        android:layout_marginStart="275dp"
        android:layout_marginTop="375dp"
        android:alpha="0.2"
        android:rotation="30"
        android:src="@mipmap/pattern3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    <TextView-->
    <!--        android:id="@+id/dlgView"-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="VIEW DIALOG"-->
    <!--        app:layout_constraintBottom_toBottomOf="parent"-->
    <!--        app:layout_constraintEnd_toEndOf="parent"-->
    <!--        app:layout_constraintHorizontal_bias="0.498"-->
    <!--        app:layout_constraintStart_toStartOf="parent"-->
    <!--        app:layout_constraintTop_toTopOf="parent"-->
    <!--        app:layout_constraintVertical_bias="0.071" />-->

    <TextView
        android:id="@+id/timerState"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:gravity="bottom|center"
        android:text="timer"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#fff"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/timerDisplay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/timerDisplay"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:layout_marginBottom="60dp"
        android:text="00:00:00"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="60sp"
        app:layout_constraintBottom_toTopOf="@+id/recyclerView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="60dp"
        android:layout_height="55dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="365dp"
        android:alpha="0.2"
        android:rotation="45"
        android:src="@mipmap/pattern3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="180dp"
        android:layout_height="190dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="595dp"
        android:alpha="0.55"
        android:rotation="45"
        android:src="@mipmap/pattern3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="325dp"
        android:layout_marginTop="130dp"
        android:alpha="0.75"
        android:rotation="0"
        android:rotationX="0"
        android:rotationY="0"
        android:src="@mipmap/pattern1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="345dp"
        android:layout_marginTop="585dp"
        android:alpha="0.8"
        android:rotation="90"
        android:src="@mipmap/pattern1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="385dp"
        android:alpha="0.8"
        android:rotation="180"
        android:src="@mipmap/pattern1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="415dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.307">

        <Button
            android:id="@+id/startBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_weight="0"
            android:backgroundTint="@color/customBlue"
            android:shadowColor="@color/black"
            android:text="START"
            android:textColor="@color/customDarkEmerald"
            android:textSize="11dp"
            android:textStyle="bold"
            app:strokeColor="@color/customDarkEmerald"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/pauseBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:backgroundTint="@color/customBlue"
            android:shadowColor="@color/black"
            android:text="PAUSE"
            android:textColor="@color/customDarkEmerald"
            android:textSize="11dp"
            android:textStyle="bold"
            app:strokeColor="@color/customDarkEmerald"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/resumeBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            android:backgroundTint="@color/customBlue"
            android:shadowColor="@color/black"
            android:text="RESUME"
            android:textColor="@color/customDarkEmerald"
            android:textSize="11dp"
            android:textStyle="bold"
            app:strokeColor="@color/customDarkEmerald"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/stopBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0"
            android:backgroundTint="@color/customBlue"
            android:shadowColor="#000"
            android:text="STOP"
            android:textColor="@color/customDarkEmerald"
            android:textSize="11dp"
            android:textStyle="bold"
            app:strokeColor="@color/customDarkEmerald"
            app:strokeWidth="2dp" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="376dp"
        android:layout_height="274dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toTopOf="@+id/completeWorkoutBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.0">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/completeWorkoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:layout_weight="0"
        android:backgroundTint="@color/customYellow"
        android:shadowColor="#000"
        android:text="운동 완료"
        android:textColor="@color/customDarkEmerald"
        android:textSize="11dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.897"
        app:strokeColor="@color/customDarkEmerald"
        app:strokeWidth="2dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

